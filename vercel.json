{
    "version": 2,
    "builds": [
      { "src": "app/api/**/*", "use": "@vercel/node" }
    ],
    "routes": [
      {
        "src": "/api/openai",
        "headers": {
          "Access-Control-Allow-Origin": "*",
          "Access-Control-Allow-Methods": "POST, OPTIONS",
          "Access-Control-Allow-Headers": "content-type, Authorization"
        },
        "dest": "/app/api/openai/route.ts"
      },
      {
        "src": "/api/azure",
        "headers": {
          "Access-Control-Allow-Origin": "*",
          "Access-Control-Allow-Methods": "POST, OPTIONS",
          "Access-Control-Allow-Headers": "content-type, Authorization"
        },
        "dest": "/app/api/azure/route.ts"
      }
    ]
  }
  