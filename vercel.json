{
    "version": 2,
    "builds": [
      { "src": "app/api/**/*", "use": "@vercel/node" }
    ],
    "headers": [
      {
        "src": "/api/openai",
        "headers": {
          "Access-Control-Allow-Origin": "*",
          "Access-Control-Allow-Methods": "POST, OPTIONS",
          "Access-Control-Allow-Headers": "content-type, Authorization"
        }
      }
    ],
    "rewrites": [
      { "source": "/api/openai", "destination": "/app/api/openai/route.js" },
      { "source": "/api/azure/:path*", "destination": "/app/api/azure/:path.js" }
    ]
  }
  